/*导航栏阴影*/
#header{
	position:absolute;
	box-shadow:0 2px 10px #E6E6E6;
}
/*-----轮播图------*/
.viewpager>a img{
	width:100%;height:auto;
	margin-top:90px;
}

/*-----大标题------*/
.headline{
	width:1170px;height:27.2px;
	margin:30px auto 34.6px;
	text-align:center;
	line-height:27.2px;
}
.headline h3{
	display:block;
	color:#333;
	font-size:25px;
	font-family:inherit;
	font-weight:500;
	text-align:center;
}
.headline h3 a{
	display:block;
	color:#333;
	font-size:25px;
	font-family:inherit;
	font-weight:500;
	text-align:center;
}

/*-----firstFloor------*/
.img-list-box{
	width:1170px;height:338px;
	margin:0 auto;
	padding:0 15px;
}
.img-list-box ul{
	width:100%;height:308px;
	display:flex;
	margin-bottom:30px;
}
.img-list-box ul li{ 
	width:390px;height:308px;
	padding:0 5px;
}
.img-list-box ul li a div{
	width:380px:;height:250px;
	position:relative;
}
.img-list-box ul li a div img{
	width:380px;height:250.525px;
	position:absolute;
}
.img-list-box ul li a p{
	width:380px;height:28px
	display:block;
	margin:20px 0 10px;
	color:#333;
	font-size:20px;
	text-align:center;
}
.shadow{
	width:100%;height:10px;
	margin-top:30px;
	position:relative;
	box-shadow:0 -2px 10px #E6E6E6;
}
.shadow:after{
	width:100%;height:8px;
	background:#fff;
	position:absolute;
}

/*-----middleFloor------*/
#video-img-modal{
	width:100%;height:405px;
	text-align:center;
}
#video-img-modal a img{
	width:1170px;height:405px;
}
/*-----lastFloor------*/
.new-box{
	width:1170px;height:294px;
	margin:0 auto 30px;
	padding:0 15px;
}
.new-box ul{
	width:1170px;height:294px;
	margin:0 -15px;
	display:flex;
}
.new-box ul li{
	width:390px;height:294px;
	padding:0 15px;
}
.new-box ul li div{
	width:100%;height:294px;
	position:relative;
}
.new-box ul li div img{
	width:360px;height:202.5px;
	position:relative;
}
.new-box ul li div .new-text{
	width:100%;height:93px;
	padding:10px;
	background:#F1F1F1;
	position:absolute;
	bottom:0;
}
.new-box ul li div .new-text p{
	width:340px;height:41.6px;
	color:#000;
	font-size:15px;
}
.new-box ul li div .new-text a{
	width:71.14px;height:20.8px;
	color:#337ab7;
	font-size:15px;
	position:absolute;
	bottom:10px;
}